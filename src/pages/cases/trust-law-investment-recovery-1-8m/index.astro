                <span class="info-value">{caseDetails.clientName}</span>
              </div>
              <div class="info-item">
                <span class="info-label">المبلغ المفقود:</span>
                <span class="info-value">{caseDetails.amount}</span>
              </div>
              <div class="info-item">
                <span class="info-label">المبلغ المسترجع:</span>
                <span class="info-value success">{caseDetails.totalRecovered}</span>
              </div>
              <div class="info-item">
                <span class="info-label">المدة الزمنية:</span>
                <span class="info-value">{caseDetails.duration}</span>
              </div>
              <div class="info-item">
                <span class="info-label">المكتب القانوني:</span>
                <span class="info-value">{caseDetails.lawyerName}</span>
              </div>
              <div class="info-item">
                <span class="info-label">الموقع:</span>
                <span class="info-value">{caseDetails.location}</span>
              </div>
            </div>
          </div>
          
