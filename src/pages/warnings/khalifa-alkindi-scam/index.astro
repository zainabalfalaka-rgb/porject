    font-size: 1.125rem;
    color: var(--color-neutral-600);
    max-width: 600px;
    margin: 0 auto;
  }

  .complaints-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-6);
  }

