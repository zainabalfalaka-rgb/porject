              <span class="stat-label">المبلغ المسترجع</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">{caseDetails.duration}</span>
              <span class="stat-label">مدة القضية</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">100%</span>
              <span class="stat-label">معدل الاسترجاع</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Case Overview -->
    <section class="case-overview">
      <div class="container">
        <div class="overview-grid">
          <div class="client-info">
            <h2>معلومات القضية</h2>
            <div class="info-list">
              <div class="info-item">
                <span class="info-label">العميل:</span>
                <span class="info-value">{caseDetails.clientName}</span>
              </div>
              <div class="info-item">
                <span class="info-label">المبلغ الأصلي:</span>
                <span class="info-value">{caseDetails.amount}</span>
              </div>
              <div class="info-item">
                <span class="info-label">المبلغ المسترجع:</span>
                <span class="info-value success">{caseDetails.totalRecovered}</span>
              </div>
              <div class="info-item">
                <span class="info-label">المدة الزمنية:</span>
                <span class="info-value">{caseDetails.duration}</span>
              </div>
              <div class="info-item">
                <span class="info-label">المكتب القانوني:</span>
                <span class="info-value">{caseDetails.lawyerName}</span>
              </div>
              <div class="info-item">
                <span class="info-label">الموقع:</span>
                <span class="info-value">{caseDetails.location}</span>
              </div>
              <div class="info-item">
                <span class="info-label">نوع القضية:</span>
                <span class="info-value">{caseDetails.caseType}</span>
