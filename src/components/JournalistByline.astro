---
import { getJournalistByArticle } from '../data/journalists.js';

export interface Props {
  articleSlug: string;
  showFullProfile?: boolean;
}

const { articleSlug, showFullProfile = false } = Astro.props;

const journalist = getJournalistByArticle(articleSlug);

if (!journalist) {
  // إذا لم يتم العثور على صحفي، لا نعرض شيئاً
  return null;
}
---

{journalist && (
  <section class="journalist-byline">
    <div class="byline-container">
      <div class="journalist-info">
        <div class="journalist-avatar">
          <img 
            src={journalist.image} 
            alt={journalist.name}
            class="avatar-image"
            loading="lazy"
          />
        </div>
        
        <div class="journalist-details">
          <div class="journalist-meta">
            <span class="byline-label">كتب بواسطة:</span>
            <a href={`/author/${journalist.id}/`} class="journalist-name">
              {journalist.name}
            </a>
          </div>
          
          <p class="journalist-title">{journalist.title}</p>
          
          {showFullProfile && (
            <p class="journalist-bio">{journalist.bio}</p>
          )}
          
          <div class="social-links">
            <a 
              href={journalist.socialMedia.twitter} 
              target="_blank" 
              rel="noopener"
              class="social-link twitter"
              aria-label={`تابع ${journalist.name} على تويتر`}
            >
              <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
            
            <a 
              href={journalist.socialMedia.linkedin} 
              target="_blank" 
              rel="noopener"
              class="social-link linkedin"
              aria-label={`تابع ${journalist.name} على لينكد إن`}
            >
              <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
      
      {!showFullProfile && (
        <div class="view-profile">
          <a href={`/author/${journalist.id}/`} class="profile-link">
            عرض الملف الشخصي
          </a>
        </div>
      )}
    </div>
  </section>
)}

<style>
  .journalist-byline {
    background: var(--color-neutral-50);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    margin: var(--space-8) 0;
    border-left: 4px solid var(--color-primary);
  }

  .byline-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-4);
  }

  .journalist-info {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    flex: 1;
  }

  .journalist-avatar {
    flex-shrink: 0;
  }

  .avatar-image {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--color-primary);
  }

  .journalist-details {
    flex: 1;
  }

  .journalist-meta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-2);
  }

  .byline-label {
    color: var(--color-neutral-500);
    font-size: 0.875rem;
    font-weight: var(--font-weight-semibold);
  }

  .journalist-name {
    color: var(--color-primary);
    font-weight: var(--font-weight-bold);
    text-decoration: none;
    font-size: 1.125rem;
    transition: color 0.2s ease;
  }

  .journalist-name:hover {
    color: var(--color-primary-light);
  }

  .journalist-title {
    color: var(--color-neutral-600);
    font-size: 0.875rem;
    margin: 0 0 var(--space-3);
    line-height: var(--line-height-relaxed);
  }

  .journalist-bio {
    color: var(--color-neutral-600);
    font-size: 0.875rem;
    line-height: var(--line-height-relaxed);
    margin: 0 0 var(--space-4);
  }

  .social-links {
    display: flex;
    gap: var(--space-3);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .social-link.twitter {
    background: #1da1f2;
    color: white;
  }

  .social-link.twitter:hover {
    background: #0d8bd9;
    transform: translateY(-2px);
  }

  .social-link.linkedin {
    background: #0077b5;
    color: white;
  }

  .social-link.linkedin:hover {
    background: #005885;
    transform: translateY(-2px);
  }

  .view-profile {
    flex-shrink: 0;
  }

  .profile-link {
    background: var(--color-primary);
    color: white;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-md);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: var(--font-weight-semibold);
    transition: all 0.2s ease;
  }

  .profile-link:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .byline-container {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-4);
    }

    .journalist-info {
      width: 100%;
    }

    .journalist-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-1);
    }

    .view-profile {
      align-self: stretch;
    }

    .profile-link {
      display: block;
      text-align: center;
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    .journalist-info {
      flex-direction: column;
      text-align: center;
    }

    .avatar-image {
      width: 50px;
      height: 50px;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>