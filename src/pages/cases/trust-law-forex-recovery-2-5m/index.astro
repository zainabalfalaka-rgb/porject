        <div class="challenges-grid">
          {challengesFaced.map(challenge => (
            <div class="challenge-card">
              <h4>{challenge.challenge}</h4>
              <p class="challenge-description">{challenge.description}</p>
              <div class="solution">
                <span class="solution-label">الحل:</span>
                <p class="solution-text">{challenge.solution}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Key Success Factors -->
    <section class="success-factors">
      <div class="container">
        <div class="section-header">
          <h2>عوامل النجاح الرئيسية</h2>
