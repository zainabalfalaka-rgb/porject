    background: white;
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    border-left: 4px solid var(--color-warning);
  }

  .expertise-header h4 {
    color: var(--color-warning);
    margin-bottom: var(--space-4);
    font-size: 1.125rem;
  }

