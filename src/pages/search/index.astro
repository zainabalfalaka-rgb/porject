<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Filter functionality
    const categoryFilter = document.getElementById('categoryFilter');
    const sortFilter = document.getElementById('sortFilter');
    const resultsGrid = document.querySelector('.results-grid');
    const allResults = resultsGrid ? Array.from(resultsGrid.children) : [];
    
    function applyFilters() {
      if (!resultsGrid || allResults.length === 0) return;
      
      const selectedCategory = categoryFilter?.value || 'all';
      const selectedSort = sortFilter?.value || 'relevance';
      
      // Filter results
      const filteredResults = allResults.filter(result => {
        if (selectedCategory === 'all') return true;
        const resultType = result.querySelector('.result-type')?.textContent;
        return resultType === selectedCategory;
      });
      
      // Sort results
      if (selectedSort === 'recent') {
        filteredResults.reverse();
      }
      
      // Clear and re-add filtered results
      resultsGrid.innerHTML = '';
      filteredResults.forEach(result => {
        resultsGrid.appendChild(result);
      });
      
      // Show message if no results
      if (filteredResults.length === 0) {
        resultsGrid.innerHTML = '<p class="no-filter-results">لا توجد نتائج تطابق الفلتر المحدد</p>';
      }
    }
    
    categoryFilter?.addEventListener('change', applyFilters);
    sortFilter?.addEventListener('change', applyFilters);
    
    // Search form enhancement
    const searchForm = document.querySelector('.search-form');
    const searchInput = document.querySelector('.search-input');
    
    searchInput?.addEventListener('keyup', function(e) {
      if (e.key === 'Enter') {
        searchForm?.submit();
      }
    });
    
    // Live search suggestions (optional enhancement)
    searchInput?.addEventListener('input', function() {
      const query = this.value.trim();
      if (query.length >= 2) {
        // Could add live search suggestions here
        console.log('Searching for:', query);
      }
    });
  });
</script>

