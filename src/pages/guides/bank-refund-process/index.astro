              <h4>{bankType.type}</h4>
              <div class="type-details">
                <div class="detail-item">
                  <span class="detail-label">مهلة Chargeback:</span>
                  <span class="detail-value">{bankType.chargebackPolicy}</span>
                </div>
                <div class="detail-item">
                  <span class="detail-label">معدل النجاح:</span>
                  <span class="detail-value success">{bankType.successRate}</span>
                </div>
              </div>
