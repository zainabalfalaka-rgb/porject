import CommentsDisplay from '../../../components/CommentsDisplay.astro';

const schemaData = {
  "@type": "WebPage",
  "name": "تحذير: مكتب تدقيق مالي مزيف في دبي - دليل الخليج",
  "description": "تحذير من مكتب تدقيق مالي مزيف يدعي العمل في دبي ويستهدف المستثمرين بعمليات احتيال مالية",
  "url": "https://khalijtrust.com/warnings/fake-financial-audit-dubai/"
