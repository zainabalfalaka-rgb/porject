                <div class="alert-actions">
                  <a href="/report" class="btn btn-primary">
                    إبلاغ عن احتيال
                  </a>
                  <a href="/lawyers" class="btn btn-secondary">
                    استشارة قانونية
                  </a>
                </div>
              </div>
            </div>

            <div class="contact-card">
              <h3>جهات الإبلاغ</h3>
              <div class="contact-list">
                <div class="contact-item">
                  <span class="contact-label">شرطة دبي:</span>
                  <span class="contact-value">901</span>
                </div>
                <div class="contact-item">
                  <span class="contact-label">البنك المركزي:</span>
                  <span class="contact-value">80044444</span>
                </div>
                <div class="contact-item">
                  <span class="contact-label">هيئة الأوراق المالية:</span>
                  <span class="contact-value">80024272</span>
                </div>
              </div>
            </div>

