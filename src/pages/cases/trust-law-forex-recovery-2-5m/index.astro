  schemaData={schemaData}
>
  <Header />
  
  <main>
    <!-- Case Header -->
    <section class="case-header">
      <div class="container">
        <div class="header-content">
          <div class="success-badge">
            <span class="badge-icon">✅</span>
            <span class="badge-text">قصة نجاح</span>
          </div>
          
          <h1 class="case-title">
            استرجاع 2.5 مليون جنيه من منصة فوركس احتيالية
