---

<Layout 
  title="أدوات التحقق من الشركات والحماية من الاحتيال - دليل الخليج"
  description="أدوات مجانية ومتقدمة للتحقق من صحة الشركات والتراخيص وفحص المواقع المشبوهة لحمايتك من الاحتيال"
  keywords="أدوات تحقق، فحص الشركات، التحقق من التراخيص، أمان المواقع، حماية من الاحتيال، الخليج"
  schemaData={schemaData}
>
  <Header />
  
  <main>
    <!-- Page Header -->
    <section class="page-header">
      <div class="container">
        <div class="header-content">
          <h1 class="page-title">
            <span class="title-icon">🛠️</span>
            أدوات التحقق
          </h1>
          <p class="page-description">
            أدوات مجانية ومتقدمة تساعدك في التحقق من صحة الشركات والمواقع والوثائق 
            لحمايتك من الاحتيال والنصب قبل اتخاذ أي قرار استثماري.
          </p>
          
          <div class="tools-stats">
            <div class="stat-item">
              <span class="stat-number">{tools.length}</span>
              <span class="stat-label">أداة متاحة</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">{tools.filter(t => t.status === 'متاح').length}</span>
              <span class="stat-label">أداة جاهزة</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">100%</span>
              <span class="stat-label">مجاني</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Tools Section -->
    <section class="quick-tools">
      <div class="container">
        <div class="section-header">
          <h2>أدوات سريعة</h2>
          <p>ابدأ فوراً بالتحقق من الشركات والمواقع</p>
        </div>
        
        <div class="quick-tools-grid">
          <div class="quick-tool-card">
            <div class="tool-icon">🔍</div>
            <h3>فحص سريع للشركة</h3>
            <form class="quick-form" id="companyQuickCheck">
              <input 
                type="text" 
                placeholder="أدخل اسم الشركة أو رقم الترخيص"
                class="quick-input"
                required
              />
              <button type="submit" class="btn btn-primary">
                فحص الآن
              </button>
            </form>
          </div>
          
          <div class="quick-tool-card">
            <div class="tool-icon">🌐</div>
            <h3>فحص سريع للموقع</h3>
            <form class="quick-form" id="websiteQuickCheck">
              <input 
                type="url" 
                placeholder="أدخل رابط الموقع"
                class="quick-input"
                required
              />
              <button type="submit" class="btn btn-secondary">
                فحص الآن
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Filters Section -->
    <section class="filters-section">
      <div class="container">
        <div class="filters-container">
          <div class="filter-group">
            <label for="categoryFilter" class="filter-label">الفئة:</label>
            <select id="categoryFilter" class="filter-select">
              {categories.map(category => (
                <option value={category.value}>{category.label}</option>
              ))}
            </select>
          </div>
          
          <div class="filter-group">
            <label for="statusFilter" class="filter-label">الحالة:</label>
            <select id="statusFilter" class="filter-select">
              <option value="all">جميع الأدوات</option>
              <option value="available">متاح الآن</option>
              <option value="coming">قريباً</option>
            </select>
          </div>
          
          <div class="filter-group">
            <label for="popularFilter" class="filter-label">الشعبية:</label>
            <select id="popularFilter" class="filter-select">
              <option value="all">الجميع</option>
              <option value="popular">الأكثر شعبية</option>
            </select>
          </div>
        </div>
      </div>
    </section>

    <!-- Tools Grid -->
    <section class="tools-section">
      <div class="container">
        <div class="tools-grid">
          {tools.map(tool => (
            <article class="tool-card">
              <div class="card-header">
                <div class="tool-info">
                  <div class="tool-icon-large">{tool.icon}</div>
                  <div class="tool-meta">
                    <span class="tool-category">{tool.category}</span>
                    {tool.popular && <span class="popular-badge">شائع</span>}
                  </div>
                </div>
                <div class="tool-status">
                  <span class="status-badge status-{tool.status === 'متاح' ? 'available' : 'coming'}">
                    {tool.status}
                  </span>
                </div>
              </div>
              
              <div class="card-body">
                <h3 class="tool-title">{tool.title}</h3>
                <p class="tool-description">{tool.description}</p>
                
                <div class="tool-features">
                  <h4 class="features-title">المميزات:</h4>
                  <ul class="features-list">
                    {tool.features.map(feature => (
                      <li class="feature-item">
                        <span class="feature-icon">✓</span>
                        <span>{feature}</span>
                      </li>
                    ))}
                  </ul>
                </div>
                
                <div class="tool-coverage">
                  <h4 class="coverage-title">التغطية الجغرافية:</h4>
                  <div class="countries-list">
                    {tool.countries.map(country => (
                      <span class="country-tag">{country}</span>
                    ))}
                  </div>
                </div>
              </div>
              
              <div class="card-footer">
                {tool.status === 'متاح' ? (
                  <a href={`/tools/${tool.slug}/`} class="btn btn-primary">
                    استخدم الأداة
                  </a>
                ) : (
                  <button class="btn btn-outline notify-btn" data-tool={tool.title}>
                    أعلمني عند التوفر
                  </button>
                )}
                <button class="btn btn-outline share-btn" data-title={tool.title}>
                  مشاركة
                </button>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- How to Use Section -->
    <section class="how-to-use">
      <div class="container">
        <div class="section-header">
          <h2>كيف تستخدم أدواتنا؟</h2>
          <p>خطوات بسيطة للحصول على أفضل النتائج</p>
        </div>
        
        <div class="steps-grid">
          <div class="step-card">
            <div class="step-number">1</div>
            <div class="step-content">
              <h3>اختر الأداة المناسبة</h3>
              <p>حدد نوع التحقق الذي تحتاجه من قائمة أدواتنا المتنوعة</p>
            </div>
          </div>
          
          <div class="step-card">
            <div class="step-number">2</div>
            <div class="step-content">
              <h3>أدخل المعلومات المطلوبة</h3>
              <p>اكتب البيانات التي تريد التحقق منها بدقة</p>
            </div>
          </div>
          
          <div class="step-card">
            <div class="step-number">3</div>
            <div class="step-content">
              <h3>احصل على النتائج</h3>
              <p>ستحصل على تقرير مفصل خلال ثوانٍ معدودة</p>
            </div>
          </div>
          
          <div class="step-card">
            <div class="step-number">4</div>
            <div class="step-content">
              <h3>اتخذ قرارك بثقة</h3>
              <p>استخدم النتائج لاتخاذ قرار مدروس ومحمي</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Safety Tips -->
    <section class="safety-tips">
      <div class="container">
        <div class="tips-card">
          <div class="tips-icon">💡</div>
          <div class="tips-content">
            <h3>نصائح مهمة للأمان</h3>
            <div class="tips-grid">
              <div class="tip-item">
                <span class="tip-icon">🔒</span>
                <p>لا تشارك معلوماتك الشخصية مع أي شركة قبل التحقق من صحتها</p>
              </div>
              <div class="tip-item">
                <span class="tip-icon">⚠️</span>
                <p>كن حذراً من الوعود بأرباح خيالية أو عوائد مضمونة</p>
              </div>
              <div class="tip-item">
                <span class="tip-icon">📞</span>
                <p>تأكد من وجود معلومات اتصال حقيقية وعنوان فعلي للشركة</p>
              </div>
              <div class="tip-item">
                <span class="tip-icon">🔍</span>
                <p>ابحث عن تقييمات وآراء عملاء سابقين قبل الاستثمار</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-section">
      <div class="container">
        <div class="contact-card">
          <div class="contact-icon">🤝</div>
          <div class="contact-content">
            <h3>هل تحتاج مساعدة إضافية؟</h3>
            <p>فريقنا جاهز لمساعدتك في استخدام الأدوات أو الإجابة على استفساراتك</p>
            <div class="contact-actions">
              <a href="/contact/" class="btn btn-primary">
                اتصل بنا
              </a>
              <a href="https://wa.me/97145109509" class="btn btn-outline" target="_blank">
                واتساب مباشر
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Filter functionality
    const categoryFilter = document.getElementById('categoryFilter');
    const statusFilter = document.getElementById('statusFilter');
    const popularFilter = document.getElementById('popularFilter');
    
    function applyFilters() {
      console.log('Applying filters:', {
        category: categoryFilter?.value,
        status: statusFilter?.value,
        popular: popularFilter?.value
      });
    }
    
    [categoryFilter, statusFilter, popularFilter].forEach(filter => {
      filter?.addEventListener('change', applyFilters);
    });
    
    // Quick check forms
    const companyForm = document.getElementById('companyQuickCheck');
    const websiteForm = document.getElementById('websiteQuickCheck');
    
    companyForm?.addEventListener('submit', function(e) {
      e.preventDefault();
      const input = this.querySelector('.quick-input');
      const query = input.value.trim();
      
      if (query) {
        // Simulate quick check
        alert(`جاري فحص الشركة: ${query}\nهذه ميزة تجريبية وستكون متاحة قريباً.`);
      }
    });
    
    websiteForm?.addEventListener('submit', function(e) {
      e.preventDefault();
      const input = this.querySelector('.quick-input');
      const url = input.value.trim();
      
      if (url) {
        // Simulate quick check
        alert(`جاري فحص الموقع: ${url}\nهذه ميزة تجريبية وستكون متاحة قريباً.`);
      }
    });
    
    // Notify buttons
    const notifyButtons = document.querySelectorAll('.notify-btn');
    notifyButtons.forEach(button => {
      button.addEventListener('click', function() {
        const toolName = this.dataset.tool;
        const email = prompt(`أدخل بريدك الإلكتروني ليتم إعلامك عند توفر أداة "${toolName}"`);
        
        if (email && email.includes('@')) {
          alert('شكراً! سنقوم بإعلامك عند توفر الأداة.');
          console.log(`Notification request for ${toolName}: ${email}`);
        }
      });
    });
    
    // Share functionality
    const shareButtons = document.querySelectorAll('.share-btn');
    shareButtons.forEach(button => {
      button.addEventListener('click', async function() {
        const title = this.dataset.title;
        const url = window.location.href;
        
        if (navigator.share) {
          try {
            await navigator.share({
              title: `أداة: ${title}`,
              text: 'أداة مفيدة للتحقق والحماية من الاحتيال',
              url: url
            });
          } catch (error) {
            // Handle permission denied, user cancellation, or other errors
            if (error.name === 'NotAllowedError' || error.name === 'AbortError') {
              // Fall back to clipboard
              navigator.clipboard.writeText(`أداة: ${title} - ${url}`);
              
              const originalText = this.textContent;
              this.textContent = 'تم النسخ!';
              setTimeout(() => {
                this.textContent = originalText;
              }, 2000);
            }
          }
        } else {
          navigator.clipboard.writeText(`أداة: ${title} - ${url}`);
          
          const originalText = this.textContent;
          this.textContent = 'تم النسخ!';
          setTimeout(() => {
            this.textContent = originalText;
          }, 2000);
        }
      });
    });
  });
</script>

