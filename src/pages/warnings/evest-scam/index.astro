---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import StarRating from '../../../components/StarRating.astro';
import CommentForm from '../../../components/CommentForm.astro';
import JournalistByline from '../../../components/JournalistByline.astro';

const schemaData = {
  "@type": "Article",
  "headline": "تحذير من شركة إيفيست Evest - وسيط تداول مشبوه",
  "description": "تحذير شامل من شركة إيفيست Evest التي تواجه شكاوى متزايدة حول تأخير السحب والتضليل وعدم وجود تراخيص قوية",
  "author": {
    "@type": "Organization",
    "name": "دليل الخليج"
  },
  "publisher": {
    "@type": "Organization",
    "name": "دليل الخليج",
    "logo": {
      "@type": "ImageObject",
      "url": "https://khalijtrust.com/img/logo4.png"
    }
  },
  "datePublished": "2024-01-15",
  "dateModified": "2024-01-15",
  "image": "https://khalijtrust.com/img/evest.jpg",
  "url": "https://khalijtrust.com/warnings/evest-scam/",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://khalijtrust.com/warnings/evest-scam/"
  }
};

const warningDetails = {
  companyName: "شركة إيفيست",
  englishName: "Evest",
  type: "وسيط تداول مشبوه",
  location: "غير محدد بوضوح",
  riskLevel: "خطر عالي",
  reportedAmount: "متنوع",
  reportsCount: 89,
  status: "نشطة - تعامل بحذر شديد",
  lastUpdated: "2024-01-15"
};

const suspiciousIndicators = [
  {
    title: "عدم وجود ترخيص قوي",
    description: "لا تملك تراخيص من هيئات رقابية موثوقة مثل FCA أو CySEC أو ASIC",
    severity: "عالي",
    icon: "📜"
  },
  {
    title: "مشاكل في عمليات السحب",
    description: "تأخيرات طويلة في السحب وإغلاق حسابات فجأة بعد طلبات السحب",
    severity: "عالي",
    icon: "💳"
  },
  {
    title: "تقييمات سلبية متزايدة",
    description: "شكاوى متكررة على منصات المراجعة من عملاء تعرضوا لخسائر",
    severity: "متوسط",
    icon: "⭐"
  },
  {
    title: "أساليب تسويقية مضللة",
    description: "وعود بأرباح مضمونة وضغط مستمر للإيداع المتكرر",
    severity: "عالي",
    icon: "📢"
  }
];

const protectionMeasures = [
  {
    title: "تحقق من الترخيص الرسمي",
    description: "تأكد من أن الشركة مرخصة من هيئة رقابية قوية ومعترف بها عالمياً",
    icon: "✔️"
  },
  {
    title: "اقرأ مراجعات المستخدمين الحقيقية",
    description: "ابحث عن آراء حقيقية في المنتديات المالية ومواقع التقييم المستقلة",
    icon: "✔️"
  },
  {
    title: "جرّب السحب بمبلغ صغير أولاً",
    description: "اختبر عملية السحب بمبلغ صغير قبل إيداع مبالغ كبيرة",
    icon: "✔️"
  },
  {
    title: "لا تثق بالوعود الكبيرة",
    description: "أي شركة تضمن أرباحاً مضمونة هي شركة مشبوهة",
    icon: "✔️"
  }
];

const recoveryOptions = [
  {
    title: "التواصل مع الجهات الرقابية",
    description: "قدم طلب استرداد (Chargeback) إلى البنك وأبلغ الهيئة المالية في بلدك",
    steps: ["تواصل مع البنك", "قدم الوثائق المطلوبة", "اتبع إجراءات الاسترداد"]
  },
  {
    title: "الاستعانة بمكاتب المحاماة المتخصصة",
    description: "هناك مكاتب محاماة متخصصة في استعادة الأموال من شركات التداول النصابة",
    steps: ["ابحث عن محامي متخصص", "قدم تفاصيل القضية", "ابدأ الإجراءات القانونية"]
  }
];
---

<Layout 
  title="تحذير من شركة إيفيست Evest - وسيط تداول مشبوه"
  description="تحذير شامل من شركة إيفيست Evest التي تواجه شكاوى متزايدة حول تأخير السحب والتضليل وعدم وجود تراخيص قوية من هيئات رقابية موثوقة"
  keywords="إيفيست، Evest، وسيط تداول مشبوه، تأخير السحب، احتيال تداول، فوركس مشبوه، شركة غير موثوقة"
  schemaData={schemaData}
>
  <Header />
  
  <main>
    <!-- Warning Header -->
    <section class="warning-header">
      <div class="container">
        <div class="header-content">
          <div class="warning-badge">
            <span class="badge-icon">⚠️</span>
            <span class="badge-text">تحذير مهم</span>
          </div>
          
          <h1 class="warning-title">
            تحذير من شركة إيفيست
            <span class="english-name">Evest Trading Platform</span>
          </h1>
          
          <div class="company-image">
            <img src="https://khalijtrust.com/img/evest.jpg" alt="شركة إيفيست Evest" class="company-logo" />
          </div>
          
          <div class="warning-summary">
            <p class="summary-text">
              شركة إيفيست (Evest) تواجه شكاوى متزايدة حول تأخيرات في السحب، تضليل العملاء، 
              وعدم الوضوح في التراخيص. تحذيرات من ممارسات مشبوهة تستدعي الحذر الشديد.
            </p>
          </div>
          
          <div class="warning-stats">
            <div class="stat-item danger">
              <StarRating rating={1} size="large" />
            </div>
            <div class="stat-item">
              <span class="stat-number">{warningDetails.reportsCount}</span>
              <span class="stat-label">شكوى مسجلة</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">خطر عالي</span>
              <span class="stat-label">مستوى التحذير</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Company Analysis -->
    <section class="company-analysis">
      <div class="container">
        <div class="analysis-grid">
          <div class="analysis-card">
            <h3>معلومات الشركة</h3>
            <div class="info-list">
              <div class="info-item">
                <span class="info-label">الاسم:</span>
                <span class="info-value">{warningDetails.companyName}</span>
              </div>
              <div class="info-item">
                <span class="info-label">الاسم الإنجليزي:</span>
                <span class="info-value">{warningDetails.englishName}</span>
              </div>
              <div class="info-item">
                <span class="info-label">النوع:</span>
                <span class="info-value">{warningDetails.type}</span>
              </div>
              <div class="info-item">
                <span class="info-label">مستوى الخطر:</span>
                <span class="info-value warning">{warningDetails.riskLevel}</span>
              </div>
            </div>
          </div>
          
          <div class="analysis-card">
            <h3>إحصائيات التحذير</h3>
            <div class="info-list">
              <div class="info-item">
                <span class="info-label">عدد الشكاوى:</span>
                <span class="info-value">{warningDetails.reportsCount}</span>
              </div>
              <div class="info-item">
                <span class="info-label">الحالة:</span>
                <span class="info-value warning">{warningDetails.status}</span>
              </div>
              <div class="info-item">
                <span class="info-label">آخر تحديث:</span>
                <span class="info-value">{new Date(warningDetails.lastUpdated).toLocaleDateString('ar-AE')}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Suspicious Indicators -->
    <section class="suspicious-indicators">
      <div class="container">
        <div class="section-header">
          <h2>مؤشرات تدل على أن شركة إيفيست قد تكون نصابة</h2>
          <p>العلامات التحذيرية التي يجب الانتباه إليها</p>
        </div>
        
        <div class="indicators-grid">
          {suspiciousIndicators.map(indicator => (
            <div class="indicator-card">
              <div class="indicator-header">
                <div class="indicator-icon">{indicator.icon}</div>
                <div class="severity-badge severity-{indicator.severity.toLowerCase()}">
                  {indicator.severity}
                </div>
              </div>
              <h4>{indicator.title}</h4>
              <p>{indicator.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Detailed Analysis -->
    <section class="detailed-analysis">
      <div class="container">
        <div class="analysis-content">
          <div class="analysis-section">
            <h3>1. عدم وجود ترخيص قوي</h3>
            <p>
              تزعم شركة Evest أنها مرخصة، لكن بعد البحث تبين أن التراخيص التي تستند إليها الشركة 
              ضعيفة وغير معترف بها من قبل الهيئات الرقابية المالية الموثوقة مثل:
            </p>
            <ul class="regulatory-list">
              <li>هيئة السلوك المالي البريطانية (FCA)</li>
              <li>هيئة الأوراق المالية والبورصات القبرصية (CySEC)</li>
              <li>لجنة الأوراق المالية والاستثمارات الأسترالية (ASIC)</li>
            </ul>
            <div class="warning-box">
              <span class="warning-icon">🚨</span>
              <p>عدم وجود ترخيص من هذه الهيئات يعرض المستثمرين لخطر فقدان أموالهم بدون حماية قانونية حقيقية.</p>
            </div>
          </div>
          
          <div class="analysis-section">
            <h3>2. مشاكل في عمليات السحب والإيداع</h3>
            <div class="problems-list">
              <div class="problem-item">
                <span class="problem-icon">🔸</span>
                <p>العديد من العملاء اشتكوا من صعوبة في سحب أموالهم بعد الإيداع</p>
              </div>
              <div class="problem-item">
                <span class="problem-icon">🔸</span>
                <p>تأخير عمليات السحب لفترات طويلة دون مبرر واضح</p>
              </div>
              <div class="problem-item">
                <span class="problem-icon">🔸</span>
                <p>إغلاق الحسابات فجأة بعد تقديم طلبات السحب</p>
              </div>
            </div>
          </div>
          
          <div class="analysis-section">
            <h3>3. تقييمات سلبية وتجارب غير مرضية</h3>
            <p>
              عند البحث في منصات مراجعة الوسطاء مثل Trustpilot و Forex Peace Army، 
              وجدنا العديد من الشكاوى التي تتحدث عن:
            </p>
            <ul class="complaints-list">
              <li>تعرض العملاء لخسائر بسبب استراتيجيات تسويقية مضللة</li>
              <li>ضغط من وسطاء الشركة للإيداع أكثر</li>
              <li>اختفاء الأموال أو رفض السحب بدون أسباب واضحة</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Protection Guide -->
    <section class="protection-guide">
      <div class="container">
        <div class="section-header">
          <h2>كيف تحمي نفسك من شركات التداول النصابة مثل إيفيست؟</h2>
          <p>خطوات عملية لضمان أمان استثماراتك</p>
        </div>
        
        <div class="protection-grid">
          {protectionMeasures.map(measure => (
            <div class="protection-card">
              <div class="protection-icon">{measure.icon}</div>
              <h4>{measure.title}</h4>
              <p>{measure.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Recovery Options -->
    <section class="recovery-options">
      <div class="container">
        <div class="section-header">
          <h2>كيف يمكنك استرداد أموالك من شركة Evest؟</h2>
          <p>خيارات قانونية لاسترجاع أموالك</p>
        </div>
        
        <div class="recovery-grid">
          {recoveryOptions.map(option => (
            <div class="recovery-card">
              <h4>{option.title}</h4>
              <p class="recovery-description">{option.description}</p>
              <div class="recovery-steps">
                {option.steps.map(step => (
                  <div class="recovery-step">
                    <span class="step-bullet">•</span>
                    <span class="step-text">{step}</span>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Khalij Trust Promotion -->
    <section class="khalij-promotion">
      <div class="container">
        <div class="promotion-card">
          <div class="promotion-icon">🔎</div>
          <div class="promotion-content">
            <h3>كيف يساعدك موقع دليل الخليج في تجنب الاحتيال؟</h3>
            <div class="benefits-grid">
              <div class="benefit-item">
                <span class="benefit-icon">📍</span>
                <div class="benefit-text">
                  <h4>مراجعات حقيقية عن شركات التداول</h4>
                  <p>معرفة مصداقية الشركات قبل الاستثمار</p>
                </div>
              </div>
              
              <div class="benefit-item">
                <span class="benefit-icon">📍</span>
                <div class="benefit-text">
                  <h4>قائمة بمكاتب المحاماة الموثوقة</h4>
                  <p>خبراء قانونيون لمساعدتك في استرداد أموالك</p>
                </div>
              </div>
              
              <div class="benefit-item">
                <span class="benefit-icon">📍</span>
                <div class="benefit-text">
                  <h4>تحذيرات من الشركات النصابة</h4>
                  <p>تحديثات مستمرة حول الشركات المشبوهة</p>
                </div>
              </div>
            </div>
            
            <div class="promotion-actions">
              <a href="/lawyers/" class="btn btn-primary">
                ابحث عن محامي موثوق
              </a>
              <a href="/warnings/" class="btn btn-outline">
                تصفح التحذيرات
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Final Warning -->
    <section class="final-warning">
      <div class="container">
        <div class="warning-card">
          <div class="warning-icon">🚨</div>
          <div class="warning-content">
            <h3>الخلاصة</h3>
            <p>
              شركة Evest تُثير العديد من الشبهات حول مصداقيتها، حيث تعاني من مشاكل قانونية، 
              ضعف في التراخيص، وشكاوى متزايدة من المستخدمين حول عمليات الاحتيال والتأخير في السحب.
            </p>
            <div class="final-advice">
              <p><strong>نصيحتنا:</strong> تجنب التعامل مع هذه الشركة وابحث عن بدائل موثوقة ومرخصة من هيئات رقابية قوية.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Comments Section -->
    <section class="comments-section">
      <div class="container">
        <JournalistByline articleSlug="evest-scam" />
        <CommentForm postId="evest-warning" postType="warning" />
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .warning-header {
    background: linear-gradient(135deg, var(--color-warning) 0%, #d97706 100%);
    color: white;
    padding: var(--space-20) 0;
    position: relative;
    overflow: hidden;
  }

  .warning-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><polygon fill="rgba(255,255,255,0.05)" points="0,1000 1000,800 1000,1000"/></svg>');
    background-size: cover;
  }

  .header-content {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .warning-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: rgba(255, 255, 255, 0.2);
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-6);
    backdrop-filter: blur(10px);
  }

  .badge-icon {
    font-size: 1.5rem;
  }

  .badge-text {
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
  }

  .warning-title {
    font-size: 3rem;
    margin-bottom: var(--space-6);
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }

  .english-name {
    font-size: 1.5rem;
    color: rgba(255, 255, 255, 0.8);
    font-weight: var(--font-weight-normal);
  }

  .company-image {
    margin: var(--space-8) 0;
  }

  .company-logo {
    max-width: 300px;
    height: auto;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-xl);
    border: 4px solid white;
  }

  .warning-summary {
    max-width: 800px;
    margin: 0 auto var(--space-8);
  }

  .summary-text {
    font-size: 1.25rem;
    line-height: var(--line-height-relaxed);
    color: rgba(255, 255, 255, 0.9);
  }

  .warning-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
    max-width: 600px;
    margin: 0 auto;
  }

  .stat-item {
    background: rgba(255, 255, 255, 0.15);
    padding: var(--space-4);
    border-radius: var(--radius-lg);
    backdrop-filter: blur(10px);
  }

  .stat-item.danger {
    border: 2px solid white;
  }

  .stat-number {
    display: block;
    font-size: 1.5rem;
    font-weight: var(--font-weight-bold);
    color: white;
    margin-bottom: var(--space-1);
  }

  .stat-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .company-analysis {
    padding: var(--space-16) 0;
    background: var(--color-neutral-50);
  }

  .analysis-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-8);
  }

  .analysis-card {
    background: white;
    padding: var(--space-8);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
    border-left: 4px solid var(--color-warning);
  }

  .analysis-card h3 {
    color: var(--color-warning);
    margin-bottom: var(--space-6);
    font-size: 1.5rem;
  }

  .info-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3);
    background: var(--color-neutral-50);
    border-radius: var(--radius-md);
  }

  .info-label {
    font-weight: var(--font-weight-semibold);
    color: var(--color-neutral-600);
  }

  .info-value {
    font-weight: var(--font-weight-bold);
    color: var(--color-neutral-900);
  }

  .info-value.warning {
    color: var(--color-warning);
  }

  .suspicious-indicators {
    padding: var(--space-20) 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: var(--space-4);
    color: var(--color-neutral-900);
  }

  .section-header p {
    font-size: 1.125rem;
    color: var(--color-neutral-600);
    max-width: 600px;
    margin: 0 auto;
  }

  .indicators-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .indicator-card {
    background: white;
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    border-top: 4px solid var(--color-warning);
  }

  .indicator-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-4);
  }

  .indicator-icon {
    font-size: 1.5rem;
  }

  .severity-badge {
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
  }

  .severity-عالي {
    background: #dc2626;
    color: white;
  }

  .severity-متوسط {
    background: var(--color-warning);
    color: white;
  }

  .indicator-card h4 {
    color: var(--color-warning);
    margin-bottom: var(--space-3);
    font-size: 1.125rem;
  }

  .indicator-card p {
    color: var(--color-neutral-600);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  .detailed-analysis {
    background: var(--color-neutral-50);
    padding: var(--space-20) 0;
  }

  .analysis-content {
    max-width: 900px;
