---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import StarRating from '../../../components/StarRating.astro';
import CommentForm from '../../../components/CommentForm.astro';
import JournalistByline from '../../../components/JournalistByline.astro';

const schemaData = {
  "@type": "Article",
  "headline": "تحذير من مكتب المحامي خليفة الكندي - مكتب غير موثوق",
  "description": "تحذير من مكتب المحامي خليفة الكندي الذي يستغل ضحايا الفوركس ويقدم وعوداً زائفة دون تحقيق نتائج",
  "author": {
    "@type": "Organization",
    "name": "دليل الخليج"
  },
  "publisher": {
    "@type": "Organization",
    "name": "دليل الخليج",
    "logo": {
      "@type": "ImageObject",
      "url": "https://khalijtrust.com/img/logo4.png"
    }
  },
  "datePublished": "2024-01-20",
  "dateModified": "2024-01-20",
  "image": "https://khalijtrust.com/img/alkindilaw.jpg",
