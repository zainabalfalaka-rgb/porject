    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }

  .english-name {
    font-size: 1.5rem;
    color: rgba(255, 255, 255, 0.8);
    font-weight: var(--font-weight-normal);
  }

  .company-image {
    margin: var(--space-8) 0;
  }

  .company-logo {
    max-width: 300px;
    height: auto;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-xl);
