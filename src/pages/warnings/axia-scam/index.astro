    align-items: center;
    gap: var(--space-2);
    background: rgba(255, 255, 255, 0.2);
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-6);
    backdrop-filter: blur(10px);
  }

