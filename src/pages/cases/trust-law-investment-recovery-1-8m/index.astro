            </div>
            <div class="stat-item">
              <span class="stat-number">100%</span>
              <span class="stat-label">معدل الاسترجاع</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Case Overview -->
    <section class="case-overview">
      <div class="container">
        <div class="overview-grid">
          <div class="client-info">
            <h2>تفاصيل القضية</h2>
