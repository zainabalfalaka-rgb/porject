                    <span class="stat-icon">📊</span>
                    <span class="stat-text">{lawyer.reportsCount} بلاغ</span>
                  </div>
                  <div class="stat">
                    <span class="stat-icon">🚨</span>
                    <span class="stat-text">{lawyer.riskLevel}</span>
                  </div>
                </div>
                
                <div class="lawyer-tags">
                  {lawyer.tags.map(tag => (
                    <span class="tag danger">{tag}</span>
                  ))}
                </div>
              </div>
              
              <div class="card-footer">
                <a href={`/warnings/${lawyer.slug}/`} class="read-more-btn">
