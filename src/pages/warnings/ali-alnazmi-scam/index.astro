import CommentForm from '../../../components/CommentForm.astro';
import JournalistByline from '../../../components/JournalistByline.astro';

const schemaData = {
  "@type": "Article",
  "headline": "تحذير من المحامي علي النظمي - نصاب محتال يغير اسمه",
  "description": "تحذير عاجل من المحامي علي النظمي (محمد علي الصادق سابقاً) الذي يغير اسمه لتجنب كشف جرائمه في احتيال استرجاع أموال الفوركس",
  "author": {
    "@type": "Organization",
    "name": "دليل الخليج"
  },
  "publisher": {
    "@type": "Organization",
    "name": "دليل الخليج",
    "logo": {
      "@type": "ImageObject",
      "url": "https://khalijtrust.com/img/logo4.png"
    }
  },
  "datePublished": "2024-01-20",
  "dateModified": "2024-01-20",
  "image": "https://khalijtrust.com/img/lazem.jpg",
  "url": "https://khalijtrust.com/warnings/ali-alnazmi-scam/",
  "mainEntityOfPage": {
