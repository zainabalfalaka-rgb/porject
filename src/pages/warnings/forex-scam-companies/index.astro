<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('companySearch');
    const riskFilter = document.getElementById('riskFilter');
    const typeFilter = document.getElementById('typeFilter');
    const sortFilter = document.getElementById('sortFilter');
    const companiesGrid = document.getElementById('companiesGrid');
    const noResults = document.getElementById('noResults');
    const allCompanies = Array.from(companiesGrid.children);
    
    // Search and filter functionality
    function applyFiltersAndSearch() {
      const searchTerm = searchInput.value.toLowerCase().trim();
      const selectedRisk = riskFilter.value;
      const selectedType = typeFilter.value;
      const selectedSort = sortFilter.value;
      
      let filteredCompanies = allCompanies.filter(company => {
        const arabicName = company.querySelector('.company-name-arabic').textContent.toLowerCase();
        const englishName = company.querySelector('.company-name-english').textContent.toLowerCase();
        const risk = company.dataset.risk;
        const type = company.dataset.type;
        
        // Search filter
        const matchesSearch = !searchTerm || 
          arabicName.includes(searchTerm) || 
          englishName.includes(searchTerm);
        
        // Risk filter
        const matchesRisk = selectedRisk === 'all' || risk === selectedRisk;
        
        // Type filter
        const matchesType = selectedType === 'all' || type.includes(selectedType);
        
        return matchesSearch && matchesRisk && matchesType;
      });
      
      // Sort companies
      if (selectedSort === 'reports') {
        filteredCompanies.sort((a, b) => {
          const aReports = parseInt(a.querySelector('.stat-text').textContent);
          const bReports = parseInt(b.querySelector('.stat-text').textContent);
          return bReports - aReports;
        });
      } else if (selectedSort === 'risk') {
        const riskOrder = { 'خطر شديد': 3, 'خطر عالي': 2, 'خطر متوسط': 1 };
        filteredCompanies.sort((a, b) => {
          const aRisk = riskOrder[a.dataset.risk] || 0;
          const bRisk = riskOrder[b.dataset.risk] || 0;
          return bRisk - aRisk;
        });
      }
      
      // Clear and show filtered results
      companiesGrid.innerHTML = '';
      
      if (filteredCompanies.length === 0) {
        noResults.style.display = 'block';
        companiesGrid.style.display = 'none';
      } else {
        noResults.style.display = 'none';
        companiesGrid.style.display = 'grid';
        filteredCompanies.forEach(company => {
          companiesGrid.appendChild(company);
        });
      }
    }
    
    // Event listeners
    searchInput.addEventListener('input', applyFiltersAndSearch);
    riskFilter.addEventListener('change', applyFiltersAndSearch);
    typeFilter.addEventListener('change', applyFiltersAndSearch);
    sortFilter.addEventListener('change', applyFiltersAndSearch);
    
    // Report form handling
    const reportForm = document.getElementById('reportForm');
    const submitBtn = reportForm.querySelector('.submit-btn');
    const btnText = submitBtn.querySelector('.btn-text');
    const loadingSpinner = submitBtn.querySelector('.loading-spinner');
    const messageDiv = document.getElementById('formMessage');
    
    reportForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      // Show loading state
      btnText.style.display = 'none';
      loadingSpinner.style.display = 'flex';
      submitBtn.disabled = true;
      
      const formData = new FormData(reportForm);
      const reportData = {
        reporterName: formData.get('reporterName'),
        reporterEmail: formData.get('reporterEmail'),
        reporterPhone: formData.get('reporterPhone'),
        reporterCountry: formData.get('reporterCountry'),
        scamCompanyName: formData.get('scamCompanyName'),
        scamCompanyWebsite: formData.get('scamCompanyWebsite'),
        lossAmount: formData.get('lossAmount'),
        scamType: formData.get('scamType'),
        scamDetails: formData.get('scamDetails'),
        timestamp: new Date().toISOString()
      };
      
      try {
        // Simulate successful form submission
        await new Promise(resolve => setTimeout(resolve, 2000));
        
        // Success
        messageDiv.textContent = 'تم إرسال تقريرك بنجاح! شكراً لمساعدتك في حماية الآخرين. سيتم مراجعة التقرير ونشره خلال 48 ساعة.';
        messageDiv.className = 'form-message success';
        messageDiv.style.display = 'block';
        
        // Reset form
        reportForm.reset();
        
        // Log data (in real implementation, send to server)
        console.log('Scam report submitted:', reportData);
        
      } catch (error) {
        // Error
        messageDiv.textContent = 'حدث خطأ أثناء إرسال التقرير. يرجى المحاولة مرة أخرى أو التواصل معنا مباشرة.';
        messageDiv.className = 'form-message error';
        messageDiv.style.display = 'block';
      } finally {
        // Reset button state
        btnText.style.display = 'inline';
        loadingSpinner.style.display = 'none';
        submitBtn.disabled = false;
        
        // Hide message after 8 seconds
        setTimeout(() => {
          messageDiv.style.display = 'none';
        }, 8000);
      }
    });
    
    // Report buttons
    const reportButtons = document.querySelectorAll('.report-btn');
    reportButtons.forEach(button => {
      button.addEventListener('click', function() {
        const companyName = this.dataset.company;
        const scamCompanyInput = document.getElementById('scamCompanyName');
        scamCompanyInput.value = companyName;
        
        // Scroll to form
        document.querySelector('.report-form-section').scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
        
        // Focus on form
        setTimeout(() => {
          document.getElementById('reporterName').focus();
        }, 500);
      });
    });
  });
</script>

