                    {step.tips.map(tip => (
                      <li>{tip}</li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Common Scam Tactics -->
    <section class="scam-tactics">
