            <div class="stat-item">
              <span class="stat-number">{fakeLawyers.length}</span>
              <span class="stat-label">محامي محتال</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">{fakeLawyers.reduce((sum, l) => sum + l.reportsCount, 0)}</span>
              <span class="stat-label">بلاغ موثق</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">100%</span>
              <span class="stat-label">معدل الاحتيال</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Filters Section -->
    <section class="filters-section">
      <div class="container">
        <div class="filters-container">
          <div class="filter-group">
            <label for="riskFilter" class="filter-label">مستوى الخطر:</label>
            <select id="riskFilter" class="filter-select">
              {riskLevels.map(level => (
                <option value={level.value}>{level.label}</option>
              ))}
            </select>
          </div>
          
          <div class="filter-group">
            <label for="sortFilter" class="filter-label">ترتيب حسب:</label>
            <select id="sortFilter" class="filter-select">
              <option value="recent">الأحدث</option>
              <option value="reports">عدد البلاغات</option>
              <option value="risk">مستوى الخطر</option>
            </select>
          </div>
          
          <button class="report-btn" onclick="window.location.href='/report/'">
            <span class="btn-icon">📝</span>
            بلغ عن محامي محتال
          </button>
        </div>
      </div>
    </section>

    <!-- Fake Lawyers List -->
    <section class="fake-lawyers-section">
      <div class="container">
        <div class="lawyers-grid-cards">
          {fakeLawyers.map(lawyer => (
            <article class="lawyer-card-compact">
              <div class="card-header">
                <div class="lawyer-info-compact">
                  <h2 class="lawyer-name">
                    <a href={`/warnings/${lawyer.slug}/`}>{lawyer.name}</a>
                  </h2>
                  {lawyer.previousName && (
                    <p class="previous-name">المعروف سابقاً: {lawyer.previousName}</p>
                  )}
