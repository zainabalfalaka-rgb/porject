  location: "غير محدد",
  riskLevel: "خطر عالي",
  phone: "+60536657532 غير صالح",
  email: "info@alsahleilaw.com",
  reportsCount: 18,
  status: "نشط - احذر التعامل معه",
  lastUpdated: "2025-07-30"
