        </div>
        
        <div class="factors-grid">
          {keyFactors.map(factor => (
            <div class="factor-card">
              <h4>{factor.factor}</h4>
              <p class="factor-description">{factor.description}</p>
              <div class="impact">
                <span class="impact-label">التأثير:</span>
                <span class="impact-text">{factor.impact}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Financial Breakdown -->
    <section class="financial-breakdown">
      <div class="container">
        <div class="section-header">
          <h2>التفصيل المالي للقضية</h2>
          <p>تفاصيل الرسوم والمبالغ المستردة</p>
        </div>
        
        <div class="breakdown-card">
          <div class="breakdown-grid">
            <div class="breakdown-item">
              <span class="item-label">المبلغ المفقود الأصلي:</span>
              <span class="item-value original">{caseDetails.amount}</span>
            </div>
            
            <div class="breakdown-item">
              <span class="item-label">رسوم فتح ملف المحكمة:</span>
              <span class="item-value fee">{caseDetails.courtFilingFee}</span>
            </div>
            
            <div class="breakdown-item">
              <span class="item-label">رسوم النجاح (3%):</span>
              <span class="item-value fee">75,000 جنيه إسترليني</span>
            </div>
            
            <div class="breakdown-item">
              <span class="item-label">التعويضات الإضافية:</span>
