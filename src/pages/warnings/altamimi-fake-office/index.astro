---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import StarRating from '../../../components/StarRating.astro';
import CommentForm from '../../../components/CommentForm.astro';
import JournalistByline from '../../../components/JournalistByline.astro';

const schemaData = {
  "@type": "Article",
  "headline": "تحذير من مكتب التميمي الوهمي",
  "description": "تحذير من مكتب التميمي الوهمي الذي ينتحل اسم مكتب قانوني سعودي معروف ويدعي العمل من بريطانيا",
  "author": {
    "@type": "Organization",
    "name": "دليل الخليج"
  },
  "publisher": {
    "@type": "Organization",
    "name": "دليل الخليج",
    "logo": {
      "@type": "ImageObject",
      "url": "https://khalijtrust.com/img/logo4.png"
    }
  },
  "datePublished": "2024-01-20",
  "dateModified": "2024-01-20",
  "image": "https://khalijtrust.com/img/altamimi.jpg",
  "url": "https://khalijtrust.com/warnings/altamimi-fake-office/",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://khalijtrust.com/warnings/altamimi-fake-office/"
  }
};

const warningDetails = {
  officeName: "مكتب التميمي الوهمي",
  claimedLocation: "بريطانيا",
  realOffice: "مكتب التميمي الأصلي في السعودية",
  type: "مكتب وهمي ينتحل الاسم",
  riskLevel: "خطر شديد",
  reportsCount: 15,
  status: "نشط - تجنب التعامل معه نهائياً",
  lastUpdated: "2024-01-20"
};

const relatedScams = [
  {
    name: "مكتب الخليج العالمي",
    description: "مكتب وهمي يستخدم نفس الأساليب الاحتيالية",
    status: "محذر منه سابقاً"
  },
  {
    name: "مكتب الكندي",
    description: "جزء من نفس الشبكة الاحتيالية",
    status: "محذر منه سابقاً"
  }
];

const scamMethods = [
  {
    title: "انتحال اسم مكتب معروف",
    description: "ينتحل اسم مكتب التميمي السعودي المعروف لكسب الثقة",
    icon: "🎭"
  },
  {
    title: "ادعاء العمل من بريطانيا",
    description: "يدعي أنه يعمل من بريطانيا ويملك فريق محامين دوليين",
    icon: "🇬🇧"
  },
  {
    title: "وثائق قانونية مزيفة",
    description: "يرسل وثائق قانونية مزيفة موقعة بختم وهمي",
    icon: "📄"
  },
  {
    title: "طلب رسوم مقدمة",
    description: "يطلب رسوم إدارية أو رسوم تمثيل قانوني مقدماً",
    icon: "💰"
  },
  {
    title: "المماطلة والتجاهل",
    description: "بعد التحويل، يتم تجاهل الضحايا أو المماطلة المستمرة",
    icon: "👻"
  }
];

const verificationSteps = [
  {
    step: "البحث في السجلات القانونية",
    description: "ابحث عن اسم المكتب في السجلات القانونية في بريطانيا عبر موقع Companies House",
    icon: "🔍"
  },
  {
    step: "التواصل مع المكتب الأصلي",
    description: "تواصل مع المكتب الأصلي مباشرة عبر موقعه الرسمي",
    icon: "📞"
  },
  {
    step: "عدم الثقة بالمراسلات المفاجئة",
    description: "لا تثق بأي مكتب يراسلك فجأة بدون تواصل مسبق منك",
    icon: "⚠️"
  },
  {
    step: "استشارة خبير قانوني",
    description: "استشر محامٍ مرخّص أو جهة رسمية قبل الدفع لأي جهة تزعم أنها قانونية",
    icon: "👨‍⚖️"
  }
];
---

<Layout 
  title="تحذير من مكتب التميمي الوهمي"
  description="تحذير من مكتب التميمي الوهمي الذي ينتحل اسم مكتب قانوني سعودي معروف ويدعي العمل من بريطانيا لخداع الضحايا"
  keywords="مكتب التميمي الوهمي، انتحال اسم، مكتب محاماة مزيف، احتيال قانوني، التميمي بريطانيا"
  schemaData={schemaData}
>
  <Header />
  
  <main>
    <!-- Warning Header -->
    <section class="warning-header">
      <div class="container">
        <div class="header-content">
          <div class="warning-badge">
            <span class="badge-icon">🚨</span>
            <span class="badge-text">تحذير عاجل</span>
          </div>
          
          <h1 class="warning-title">
            تحذير من مكتب التميمي الوهمي
          </h1>
          
          <div class="office-image">
            <img src="https://khalijtrust.com/img/altamimi.jpg" alt="مكتب التميمي الوهمي" class="office-photo" />
          </div>
          
          <div class="warning-summary">
            <p class="summary-text">
              نحذّر جميع الأفراد من التعامل مع جهة تدّعي أنها تمثّل مكتب التميمي للمحاماة، 
              وتزعم أنها تقع في بريطانيا. هذه الجهة تنتحل اسم مكتب قانوني سعودي معروف، 
              لكنها في الحقيقة وهمية تمامًا.
            </p>
          </div>
          
          <div class="warning-stats">
            <div class="stat-item danger">
              <StarRating rating={0} size="large" />
            </div>
            <div class="stat-item">
              <span class="stat-number">{warningDetails.reportsCount}</span>
              <span class="stat-label">بلاغ مؤكد</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">خطر شديد</span>
              <span class="stat-label">مستوى التحذير</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Office Analysis -->
    <section class="office-analysis">
      <div class="container">
        <div class="analysis-content">
          <div class="main-analysis">
            <h2>اسم وهمي يستخدم غطاءً قانونياً مزيفاً</h2>
            <p>
              يدّعي هذا المكتب أنه يعمل من بريطانيا، ويملك فريق محامين دوليين لاسترجاع الأموال 
              من شركات الفوركس أو الاستثمار النصابة. لكن الواقع أن لا وجود قانوني حقيقي لهذا المكتب، 
              ولا علاقة له بمكتب التميمي الأصلي في السعودية.
            </p>
            
            <h3>علاقته بمكاتب الخليج العالمي والكندي</h3>
            <p>
              توصلنا من خلال شكاوى متعددة إلى أن هذا الكيان الاحتيالي يعمل بنفس الشبكة التي كانت 
              تسوّق نفسها سابقاً بأسماء مختلفة. كلها تتبع نفس الأسلوب: وعود زائفة، رسائل قانونية مزيفة، 
              وطلب تحويل رسوم "إجراءات قانونية" دون أي نتائج فعلية.
            </p>
          </div>
          
          <div class="related-scams">
            <h3>مكاتب مرتبطة بنفس الشبكة</h3>
            <div class="scams-list">
              {relatedScams.map(scam => (
                <div class="scam-item">
                  <div class="scam-info">
                    <h4>{scam.name}</h4>
                    <p>{scam.description}</p>
                  </div>
                  <span class="scam-status">{scam.status}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Scam Methods -->
    <section class="scam-methods">
      <div class="container">
        <div class="section-header">
          <h2>طريقة عمل المكتب الوهمي</h2>
          <p>كيف يقوم هذا المكتب بخداع الضحايا واستدراجهم</p>
        </div>
        
        <div class="methods-grid">
          {scamMethods.map(method => (
            <div class="method-card">
              <div class="method-icon">{method.icon}</div>
              <h4>{method.title}</h4>
              <p>{method.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Warning Signs -->
    <section class="warning-signs">
      <div class="container">
        <div class="section-header">
          <h2>تحذيرات مهمة</h2>
          <p>علامات تدل على أن هذا المكتب وهمي</p>
        </div>
        
        <div class="signs-grid">
          <div class="sign-card">
            <div class="sign-icon">❌</div>
            <h4>لا يوجد مكتب حقيقي في بريطانيا</h4>
            <p>لا يوجد مكتب حقيقي في بريطانيا يحمل هذا الاسم ضمن السجلات القانونية</p>
          </div>
          
          <div class="sign-card">
            <div class="sign-icon">💰</div>
            <h4>طلب أموال مقدماً</h4>
            <p>أي جهة تطلب أموال مقدماً لاستعادة أموالك يجب أن تُعتبر موضع شك</p>
          </div>
          
          <div class="sign-card">
            <div class="sign-icon">🔗</div>
            <h4>ربط بأسماء وهمية أخرى</h4>
            <p>تم ربط هذه الجهة بأسماء وهمية أخرى تم التحذير منها سابقاً</p>
          </div>
          
          <div class="sign-card">
            <div class="sign-icon">🎭</div>
            <h4>استغلال اسم "التميمي"</h4>
            <p>استغلال اسم "التميمي" يهدف فقط لخداع الناس بمظهر الاحتراف والثقة</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Verification Steps -->
    <section class="verification-steps">
      <div class="container">
        <div class="section-header">
          <h2>كيف تتأكد من مصداقية أي مكتب؟</h2>
          <p>خطوات للتحقق من مصداقية مكاتب المحاماة</p>
        </div>
        
        <div class="steps-grid">
          {verificationSteps.map((step, index) => (
            <div class="step-card">
              <div class="step-number">{index + 1}</div>
              <div class="step-content">
                <div class="step-icon">{step.icon}</div>
                <h4>{step.step}</h4>
                <p>{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Final Message -->
    <section class="final-message">
      <div class="container">
        <div class="message-card">
          <div class="message-icon">📢</div>
          <div class="message-content">
            <h3>رسالة من دليل الخليج</h3>
            <p>
              دليل الخليج مستمر في رصد هذه الجهات ونشر التحذيرات لحماية الناس من الوقوع ضحية مرة أخرى. 
              ساهم بمشاركة هذا المقال لمنع المزيد من الضحايا.
            </p>
            <div class="message-actions">
              <a href="/lawyers/" class="btn btn-primary">
                ابحث عن محامي موثوق
              </a>
              <a href="/report/" class="btn btn-outline">
                بلغ عن مكتب مشبوه
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Comments Section -->
    <section class="comments-section">
      <div class="container">
        <JournalistByline articleSlug="altamimi-fake-office" />
        <CommentForm postId="altamimi-fake-office-warning" postType="warning" />
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .warning-header {
    background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
    color: white;
    padding: var(--space-20) 0;
    position: relative;
    overflow: hidden;
  }

  .warning-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><polygon fill="rgba(255,255,255,0.05)" points="0,1000 1000,800 1000,1000"/></svg>');
    background-size: cover;
  }

  .header-content {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .warning-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: rgba(255, 255, 255, 0.2);
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-6);
    backdrop-filter: blur(10px);
  }

  .badge-icon {
    font-size: 1.5rem;
  }

  .badge-text {
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
  }

  .warning-title {
    font-size: 3rem;
    margin-bottom: var(--space-6);
    color: white;
  }

  .office-image {
    margin: var(--space-8) 0;
  }

  .office-photo {
    max-width: 300px;
    height: auto;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-xl);
    border: 4px solid white;
  }

  .warning-summary {
    max-width: 800px;
    margin: 0 auto var(--space-8);
  }

  .summary-text {
    font-size: 1.25rem;
    line-height: var(--line-height-relaxed);
    color: rgba(255, 255, 255, 0.9);
  }

  .warning-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
    max-width: 600px;
    margin: 0 auto;
  }

  .stat-item {
    background: rgba(255, 255, 255, 0.15);
    padding: var(--space-4);
    border-radius: var(--radius-lg);
    backdrop-filter: blur(10px);
  }

  .stat-item.danger {
    border: 2px solid var(--color-secondary-light);
  }

  .stat-number {
    display: block;
    font-size: 1.5rem;
    font-weight: var(--font-weight-bold);
    color: white;
    margin-bottom: var(--space-1);
  }

  .stat-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .office-analysis {
    padding: var(--space-20) 0;
    background: var(--color-neutral-50);
  }

  .analysis-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-12);
    align-items: start;
  }

  .main-analysis h2 {
    color: #dc2626;
    margin-bottom: var(--space-6);
    font-size: 2rem;
  }

  .main-analysis h3 {
    color: var(--color-neutral-900);
    margin: var(--space-8) 0 var(--space-4);
    font-size: 1.5rem;
  }

  .main-analysis p {
    color: var(--color-neutral-600);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-4);
    font-size: 1.125rem;
  }

  .related-scams {
    background: white;
    padding: var(--space-8);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    border-left: 4px solid #dc2626;
  }

  .related-scams h3 {
    color: #dc2626;
    margin-bottom: var(--space-6);
    font-size: 1.5rem;
  }

  .scams-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .scam-item {
    padding: var(--space-4);
    background: var(--color-neutral-50);
    border-radius: var(--radius-lg);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .scam-info h4 {
    color: var(--color-neutral-900);
    margin-bottom: var(--space-2);
    font-size: 1rem;
  }

  .scam-info p {
    color: var(--color-neutral-600);
    margin: 0;
    font-size: 0.875rem;
  }

  .scam-status {
    background: var(--color-error);
    color: white;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: var(--font-weight-bold);
  }

  .scam-methods {
    padding: var(--space-20) 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: var(--space-4);
    color: var(--color-neutral-900);
  }

  .section-header p {
    font-size: 1.125rem;
    color: var(--color-neutral-600);
    max-width: 600px;
    margin: 0 auto;
  }

  .methods-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .method-card {
    background: white;
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    text-align: center;
    border-top: 4px solid #dc2626;
    transition: transform 0.3s ease;
  }

  .method-card:hover {
    transform: translateY(-4px);
  }

  .method-icon {
    font-size: 2.5rem;
    margin-bottom: var(--space-4);
  }

  .method-card h4 {
    color: #dc2626;
    margin-bottom: var(--space-3);
    font-size: 1.125rem;
  }

  .method-card p {
    color: var(--color-neutral-600);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  .warning-signs {
    background: var(--color-neutral-50);
    padding: var(--space-20) 0;
  }

  .signs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .sign-card {
    background: white;
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    text-align: center;
    border-top: 4px solid var(--color-error);
  }

  .sign-icon {
    font-size: 2.5rem;
    margin-bottom: var(--space-4);
  }

  .sign-card h4 {
    color: var(--color-error);
    margin-bottom: var(--space-3);
    font-size: 1.125rem;
  }

  .sign-card p {
    color: var(--color-neutral-600);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  .verification-steps {
    padding: var(--space-20) 0;
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .step-card {
    background: white;
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    border-left: 4px solid var(--color-success);
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
  }

  .step-number {
    width: 40px;
    height: 40px;
    background: var(--color-success);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: var(--font-weight-bold);
    flex-shrink: 0;
  }

  .step-content {
    flex: 1;
  }

  .step-icon {
    font-size: 1.5rem;
    margin-bottom: var(--space-3);
  }

  .step-content h4 {
    color: var(--color-success);
    margin-bottom: var(--space-3);
    font-size: 1.125rem;
  }

  .step-content p {
    color: var(--color-neutral-600);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  .final-message {
    background: var(--color-neutral-50);
    padding: var(--space-16) 0;
  }

  .message-card {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: white;
    border-radius: var(--radius-xl);
    padding: var(--space-12);
    text-align: center;
  }

  .message-icon {
    font-size: 4rem;
    margin-bottom: var(--space-6);
  }

  .message-content h3 {
    font-size: 2rem;
    margin-bottom: var(--space-4);
    color: white;
  }

  .message-content p {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: var(--space-8);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .message-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    align-items: center;
  }

  .final-message .btn-outline {
    border-color: white;
    color: white;
  }

  .final-message .btn-outline:hover {
    background: white;
    color: var(--color-primary);
  }

  .comments-section {
    padding: var(--space-16) 0;
  }

  @media (max-width: 1024px) {
    .analysis-content {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }
  }

  @media (max-width: 768px) {
    .warning-title {
      font-size: 2rem;
    }

    .warning-stats {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .message-actions {
      flex-direction: column;
      gap: var(--space-3);
    }

    .message-actions .btn {
      width: 100%;
    }

    .section-header h2 {
      font-size: 2rem;
    }
  }
</style>