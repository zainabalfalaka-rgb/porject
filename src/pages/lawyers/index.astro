  schemaData={schemaData}
>
  <Header />
  
  <main>
    <!-- Page Header -->
    <section class="page-header">
      <div class="container">
        <div class="header-content">
          <h1 class="page-title">
            <span class="title-icon">⚖️</span>
            مكاتب محاماة موثوقة
          </h1>
          <p class="page-description">
            اعثر على أفضل مكاتب المحاماة الموثوقة المتخصصة في قضايا الاحتيال واسترجاع الأموال. 
            جميع المكاتب مُختارة بعناية ولديها سجل حافل بالنجاح.
          </p>
          
          <div class="lawyers-stats">
            <div class="stat-item">
              <span class="stat-number">{lawyers.length}</span>
              <span class="stat-label">مكتب موثوق</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">{Math.round(lawyers.reduce((sum, l) => sum + parseFloat(l.successRate), 0) / lawyers.length)}%</span>
              <span class="stat-label">متوسط النجاح</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">{lawyers.reduce((sum, l) => sum + l.casesWon, 0)}</span>
              <span class="stat-label">قضية فائزة</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Filters Section -->
    <section class="filters-section">
      <div class="container">
        <div class="filters-container">
          <div class="filter-group">
            <label for="specializationFilter" class="filter-label">التخصص:</label>
            <select id="specializationFilter" class="filter-select">
              {specializations.map(spec => (
                <option value={spec.value}>{spec.label}</option>
              ))}
            </select>
          </div>
          
          <div class="filter-group">
            <label for="locationFilter" class="filter-label">الموقع:</label>
            <select id="locationFilter" class="filter-select">
              {locations.map(location => (
                <option value={location.value}>{location.label}</option>
              ))}
            </select>
          </div>
          
          <div class="filter-group">
            <label for="availabilityFilter" class="filter-label">التوفر:</label>
            <select id="availabilityFilter" class="filter-select">
              <option value="all">الجميع</option>
              <option value="available">متاح الآن</option>
              <option value="consultation">استشارة مجانية</option>
            </select>
          </div>
        </div>
      </div>
    </section>

    <!-- Lawyers List -->
    <section class="lawyers-section">
      <div class="container">
        <div class="lawyers-grid">
          {lawyers.map(lawyer => (
            <article class="lawyer-card">
              <div class="card-header">
                <div class="lawyer-info">
                  <h2 class="lawyer-name">
                    <a href={`/lawyers/${lawyer.slug}/`}>{lawyer.name}</a>
                    {lawyer.verified && <span class="verified-badge" title="محامي موثق">✓</span>}
                  </h2>
                  <p class="specialization">{lawyer.specialization}</p>
                  <div class="rating-container">
                    <StarRating rating={lawyer.rating} size="medium" />
                  </div>
                </div>
                <div class="availability-status">
                  {lawyer.available ? (
                    <span class="status available">متاح</span>
                  ) : (
                    <span class="status busy">مشغول</span>
                  )}
                </div>
              </div>
              
              <div class="card-body">
                <div class="lawyer-stats">
                  <div class="stat-row">
                    <div class="stat">
                      <span class="stat-label">الخبرة:</span>
                      <span class="stat-value">{lawyer.experience}</span>
                    </div>
                    <div class="stat">
                      <span class="stat-label">معدل النجاح:</span>
                      <span class="stat-value success">{lawyer.successRate}</span>
                    </div>
                  </div>
                  <div class="stat-row">
                    <div class="stat">
                      <span class="stat-label">القضايا الفائزة:</span>
                      <span class="stat-value">{lawyer.casesWon}</span>
                    </div>
                    <div class="stat">
                      <span class="stat-label">المبلغ المسترجع:</span>
                      <span class="stat-value recovered">{lawyer.amountRecovered}</span>
                    </div>
                  </div>
                </div>
                
                <div class="location-languages">
                  <div class="location">
                    <span class="icon">📍</span>
                    <span>{lawyer.location}</span>
                  </div>
                  <div class="languages">
                    <span class="icon">🗣️</span>
                    <span>{lawyer.languages.join(', ')}</span>
                  </div>
                </div>
                
                <div class="specialties">
                  <h4 class="specialties-title">التخصصات:</h4>
                  <div class="specialties-list">
                    {lawyer.specialties.map(specialty => (
                      <span class="specialty-tag">{specialty}</span>
                    ))}
                  </div>
                </div>
                
                <div class="fees-info">
                  <h4 class="fees-title">الأتعاب:</h4>
                  <div class="fees-grid">
                    <div class="fee-item">
                      <span class="fee-label">الاستشارة:</span>
                      <span class="fee-value">{lawyer.fees.consultation}</span>
                    </div>
                    <div class="fee-item">
                  {lawyer.fees.courtFiling ? (
                    <div class="fee-item">
                      <span class="fee-label">رسوم المحكمة:</span>
                      <span class="fee-value">{lawyer.fees.courtFiling}</span>
                    </div>
                  ) : (
                    <div class="fee-item">
                      <span class="fee-value">{lawyer.fees.hourly}</span>
                    </div>
                    </div>
                  )}
                      <span class="fee-label">عند النجاح:</span>
                      <span class="fee-value">{lawyer.fees.success}</span>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="card-footer">
                <div class="footer-actions">
                  <a href={`/lawyers/${lawyer.slug}/`} class="btn btn-primary">
                    عرض الملف الشخصي
                  </a>
                  {lawyer.fees.consultation === "مجانية" && (
                    <a href={`/lawyers/${lawyer.slug}/consultation/`} class="btn btn-secondary">
                      استشارة مجانية
                    </a>
                  )}
                  <button class="btn btn-outline contact-btn" data-name={lawyer.name}>
                    تواصل مباشر
                  </button>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- How It Works Section -->
    <section class="how-it-works">
      <div class="container">
        <div class="section-header">
          <h2>كيف نساعدك في العثور على المحامي المناسب؟</h2>
          <p>خطوات بسيطة للحصول على المساعدة القانونية التي تحتاجها</p>
        </div>
        
        <div class="steps-grid">
          <div class="step-card">
            <div class="step-number">1</div>
            <div class="step-content">
              <h3>اختر المحامي المناسب</h3>
              <p>تصفح قائمة المحامين الموثوقين واختر الأنسب لحالتك حسب التخصص والموقع</p>
            </div>
          </div>
          
          <div class="step-card">
            <div class="step-number">2</div>
            <div class="step-content">
              <h3>احجز استشارة مجانية</h3>
              <p>معظم محامينا يقدمون استشارة أولية مجانية لتقييم حالتك وتوضيح خيارات العمل</p>
            </div>
          </div>
          
          <div class="step-card">
            <div class="step-number">3</div>
            <div class="step-content">
              <h3>ابدأ العمل القانوني</h3>
              <p>بعد الموافقة على الخطة، يبدأ المحامي العمل على قضيتك لاسترجاع أموالك</p>
            </div>
          </div>
          
          <div class="step-card">
            <div class="step-number">4</div>
            <div class="step-content">
              <h3>استلم أموالك</h3>
              <p>في حالة النجاح، تحصل على أموالك ولا تدفع إلا نسبة النجاح المتفق عليها</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Legal Advice Section -->
    <section class="legal-advice">
      <div class="container">
        <div class="advice-card">
          <div class="advice-icon">⚖️</div>
          <div class="advice-content">
            <h3>نصيحة قانونية مجانية</h3>
            <p>احصل على نصيحة قانونية أولية مجانية من خبرائنا حول حالتك</p>
            <div class="advice-actions">
              <a href="/consultation/" class="btn btn-primary">
                احجز استشارة مجانية
              </a>
              <a href="https://wa.me/97145109509" class="btn btn-outline" target="_blank">
                تحدث معنا الآن
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Filter functionality
    const specializationFilter = document.getElementById('specializationFilter');
    const locationFilter = document.getElementById('locationFilter');
    const availabilityFilter = document.getElementById('availabilityFilter');
    
    function applyFilters() {
      console.log('Applying filters:', {
        specialization: specializationFilter?.value,
        location: locationFilter?.value,
        availability: availabilityFilter?.value
      });
      // This would typically involve AJAX calls or client-side filtering
    }
    
    [specializationFilter, locationFilter, availabilityFilter].forEach(filter => {
      filter?.addEventListener('change', applyFilters);
    });
    
    // Contact buttons
    const contactButtons = document.querySelectorAll('.contact-btn');
    contactButtons.forEach(button => {
      button.addEventListener('click', function() {
        const lawyerName = this.dataset.name;
        const message = `مرحباً، أود التواصل مع ${lawyerName} بخصوص حالة احتيال تعرضت لها.`;
        const whatsappUrl = `https://wa.me/97145109509?text=${encodeURIComponent(message)}`;
        window.open(whatsappUrl, '_blank');
      });
    });
  });
</script>

