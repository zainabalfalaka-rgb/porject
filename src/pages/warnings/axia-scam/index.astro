  }

  .stat-item.danger {
    border: 2px solid var(--color-secondary-light);
  }

  .stat-number {
    display: block;
    font-size: 1.5rem;
    font-weight: var(--font-weight-bold);
    color: white;
    margin-bottom: var(--space-1);
  }

