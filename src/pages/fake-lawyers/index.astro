            <p>ابحث عن تقييمات وآراء العملاء السابقين</p>
          </div>
          
          <div class="tip-card">
            <div class="tip-icon">💰</div>
            <h4>احذر من الرسوم المقدمة</h4>
            <p>لا تدفع رسوم كبيرة مقدماً قبل رؤية نتائج</p>
          </div>
          
          <div class="tip-card">
            <div class="tip-icon">⚠️</div>
            <h4>احذر من الوعود المبالغة</h4>
            <p>لا تصدق الوعود بضمان استرجاع الأموال 100%</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Trusted Alternatives -->
    <section class="trusted-alternatives">
      <div class="container">
        <div class="alternatives-card">
          <div class="alternatives-icon">✅</div>
          <div class="alternatives-content">
            <h3>ابحث عن محامين موثوقين</h3>
            <p>
              بدلاً من المخاطرة مع المحامين المحتالين، تصفح قائمة المحامين الموثوقين 
              في دليل الخليج الذين أثبتوا نجاحهم في استرجاع الأموال.
            </p>
            <div class="alternatives-actions">
              <a href="/lawyers/" class="btn btn-primary">
                تصفح المحامين الموثوقين
              </a>
              <a href="/report/" class="btn btn-outline">
                بلغ عن محامي محتال
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Filter functionality
    const riskFilter = document.getElementById('riskFilter');
    const sortFilter = document.getElementById('sortFilter');
    
    function applyFilters() {
      console.log('Applying filters:', {
        risk: riskFilter?.value,
        sort: sortFilter?.value
      });
    }
    
    [riskFilter, sortFilter].forEach(filter => {
      filter?.addEventListener('change', applyFilters);
    });
    
    // Share functionality
    const shareButtons = document.querySelectorAll('.share-btn');
    shareButtons.forEach(button => {
      button.addEventListener('click', async function() {
        const title = this.dataset.title;
        const url = window.location.href;
        
        if (navigator.share) {
          try {
            await navigator.share({
              title: `تحذير من ${title}`,
              text: 'تحذير من محامي محتال',
              url: url
            });
          } catch (error) {
            // Handle permission denied, user cancellation, or other errors
            if (error.name === 'NotAllowedError' || error.name === 'AbortError') {
              // Fall back to clipboard
              navigator.clipboard.writeText(`تحذير من ${title} - ${url}`);
              
              const originalText = this.textContent;
              this.textContent = 'تم النسخ!';
              setTimeout(() => {
                this.textContent = originalText;
              }, 2000);
            }
          }
        } else {
          navigator.clipboard.writeText(`تحذير من ${title} - ${url}`);
          
          const originalText = this.textContent;
          this.textContent = 'تم النسخ!';
          setTimeout(() => {
            this.textContent = originalText;
          }, 2000);
        }
      });
    });
  });
</script>

